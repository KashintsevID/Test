<Window x:Class="CycleApp.Display"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CycleApp"
        mc:Ignorable="d"
        Title="Display" Height="600" MinWidth="470" Width="470">
    <TabControl TabStripPlacement="Top" Name="Menu">
        <TabItem Name="Maps" Width="110" HorizontalAlignment="Left">
            <TabItem.Header >
                <Image Height="30" Source="Images/location.png"></Image>
            </TabItem.Header>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock Margin="0 20" HorizontalAlignment="Center" FontWeight="Medium" FontSize="16">Станции</TextBlock>
                <ComboBox x:Name="ComboBoxMetro" Grid.Row="1" Margin="7 5" IsReadOnly="False" IsEditable="True" Text="{Binding NearestMetroStation}" SelectionChanged="ComboBoxMetro_SelectionChanged"></ComboBox>
                <DataGrid Margin="5 10 0 5" Grid.Row="2" x:Name="ListStations" AutoGenerateColumns="False" CanUserResizeColumns="False" CanUserReorderColumns="False" CanUserSortColumns="False" CanUserResizeRows="False" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Width="2.3*" Binding="{Binding Adress}">
                            <DataGridTextColumn.Header >
                                <TextBlock TextWrapping="Wrap" Margin="10 0 10 0">
                                    Адрес
                                </TextBlock>
                            </DataGridTextColumn.Header>
                        </DataGridTextColumn>
                        <DataGridTextColumn Width="1.7*" Binding="{Binding NearestMetroStation}">
                            <DataGridTextColumn.Header >
                                <TextBlock TextWrapping="Wrap" Margin="10 0 10 0">
                                    Ст. метро
                                </TextBlock>
                            </DataGridTextColumn.Header>
                        </DataGridTextColumn>
                        <DataGridTextColumn Width="1.2*" Binding="{Binding NumberOfSlots}">
                            <DataGridTextColumn.Header >
                                <TextBlock TextWrapping="Wrap">
                                    Свободных стоек
                                </TextBlock>
                            </DataGridTextColumn.Header>
                        </DataGridTextColumn>
                        <DataGridTextColumn Width="1.2*" Binding="{Binding NumberOfBikes}">
                            <DataGridTextColumn.Header >
                                <TextBlock TextWrapping="Wrap">
                                    Свободных велосипедов
                                </TextBlock>
                            </DataGridTextColumn.Header>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </TabItem>

        <TabItem Name="Account" Width="110" HorizontalAlignment="Left">
            <TabItem.Header>
                <Image Height=" 30" Source="Images/Account.png"></Image>
            </TabItem.Header>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="90"/>
                    <RowDefinition Height="90"/>
                    <RowDefinition Height="Auto"/>

                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.4*"/>
                    <ColumnDefinition Width="0.6*"/>
                   
                </Grid.ColumnDefinitions>

                <TextBox TextWrapping="Wrap" Width="250" Height="50 " Text="Имя пользователя" Name="UserName" VerticalAlignment="Bottom"  Grid.Row="0" Grid.Column="1" FontSize="18" FontFamily=" Times New Roman" HorizontalAlignment="Center" Margin="10"></TextBox>
                <Label Margin="10" VerticalAlignment="Top" Grid.Row="1" Grid.Column="1" FontSize="14" FontFamily="Times New Roman" HorizontalAlignment="Left">Баланс:</Label>
                <TextBox Name="Balance" TextWrapping="Wrap" FontSize="13" Grid.Column="1" Grid.Row="1" Height="20" Width="100" HorizontalAlignment="Center" Margin="0,15,8.115,0" VerticalAlignment="Top" Grid.ColumnSpan="2"></TextBox>

                <Button Name="RedactorAccount" Content="Tooltip" Margin="40,40,8,40" Grid.Column="0" Grid.Row="0" Grid.RowSpan="2">
                    <Button.ToolTip>
                        Изменить личные данные
                    </Button.ToolTip>
                    <Button.Template>
                        <ControlTemplate>
                            <Grid>
                                <Ellipse/>
                                <Image Width="70" Source="Images/Account.png"/>
                                <Image Source="Images/redactor.png" Height="20" Width="20" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10 10 10 10"></Image>
                            </Grid>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Orientation="Vertical" Margin="0,0,0.115,0">
                    <Button Name="TransferMoney" HorizontalAlignment="Left" Height=" 70" FontSize="20" FontFamily="Times New Roman" Width="450" Click="TransferMoney_Click">
                        Пополнить баланс
                    </Button>

                    <Button Name="Exit" Content="Tooltip" Margin="0 50 0 0" Click="Exit_Click">
                        <Button.ToolTip>
                            Выйти из аккаунта
                        </Button.ToolTip>
                        <Button.Template>
                            <ControlTemplate>
                                <Grid>
                                    <Image Source="Images/exit.png" HorizontalAlignment="Left" Height="30"></Image>
                                    <TextBlock FontSize="22" Width=" 70" Margin="50" HorizontalAlignment="Left" FontFamily="Times New Roman">Выйти</TextBlock>
                                </Grid>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Grid>
        </TabItem>

        <!--<TabItem Name="Maps" Width="108" HorizontalAlignment="Left">
