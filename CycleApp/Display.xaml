<Window x:Class="CycleApp.Display"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CycleApp"
        mc:Ignorable="d"
        Title="Display" Height="600" Width="460">
    <TabControl TabStripPlacement="Top" Name="Menu">
        <TabItem Name="Account" Width="108" HorizontalAlignment="Left">
            <TabItem.Header>
                <Image Height=" 30" Source="Images/Account.png"></Image>
            </TabItem.Header>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="90"/>
                    <RowDefinition Height="90"/>
                    <RowDefinition Height="Auto"/>

                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="123*"/>
                    <ColumnDefinition Width="32*"/>
                    <ColumnDefinition Width="45*"/>
                    <ColumnDefinition Width="242*"/>
                </Grid.ColumnDefinitions>

                <TextBox TextWrapping="Wrap" Width="200" Height=" 40" Text="Имя пользоватеся" Name="UserName" VerticalAlignment="Bottom"  Grid.Row="0" Grid.Column="2" FontSize="18" FontFamily=" Times New Roman" HorizontalAlignment="Center" Grid.ColumnSpan="2" Margin="43,0,44,0"></TextBox>
                <Label Margin="10,10,0,0" VerticalAlignment="Top" Grid.Row="1" Grid.Column="2" FontSize="14" FontFamily="Times New Roman" HorizontalAlignment="Left" Grid.ColumnSpan="2">Баланс:</Label>
                <TextBox Name="Balance" TextWrapping="Wrap" FontSize="12" Grid.Column="3" Grid.Row="1" Height=" Auto" Width="100" HorizontalAlignment="Center" Margin="44,15,98,0" VerticalAlignment="Top"/>

                <Button Name="RedactorAccount" Content="Tooltip" Margin="40,40,8,40" Grid.Column="0" Grid.Row="0" Grid.RowSpan="2">
                    <Button.ToolTip>
                        Изменить личные данные
                    </Button.ToolTip>
                    <Button.Template>
                        <ControlTemplate>
                            <Grid>
                                <Ellipse/>
                                <Image Width="70" Source="Images/Account.png"/>
                                <Image Source="Images/redactor.png" Height="20" Width="20" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10 10 10 10"></Image>
                            </Grid>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="4" Orientation="Vertical">
                    <Button Name="TransferMoney" HorizontalAlignment="Left" Height=" 70" FontSize="20" FontFamily="Times New Roman" Width="450" Click="TransferMoney_Click">
                        Пополнить баланс
                    </Button>

                    <Button Name="Exit" Content="Tooltip" Margin="0 50 0 0" Click="Exit_Click">
                        <Button.ToolTip>
                            Выйти из аккаунта
                        </Button.ToolTip>
                        <Button.Template>
                            <ControlTemplate>
                                <Grid>
                                    <Image Source="Images/exit.png" HorizontalAlignment="Left" Height="30"></Image>
                                    <TextBlock FontSize="22" Width=" 70" Margin="50" HorizontalAlignment="Left" FontFamily="Times New Roman">Выйти</TextBlock>
                                </Grid>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Grid>
        </TabItem>

        <TabItem Name="Maps" Width="108" HorizontalAlignment="Left">
            <TabItem.Header >
                <Image Height="30" Source="Images/location.png"></Image>
            </TabItem.Header>
            <Grid>

                <TextBlock>AllStations</TextBlock>
                <DataGrid Name="ListStations" AutoGenerateColumns="False" >
                    <DataGrid.Columns>
                        <DataGridTextColumn Width=" 0.7*" Binding="{Binding Adress}">
                            <DataGridTextColumn.Header >
                                <TextBlock TextWrapping="Wrap" Margin="120 0 100 0">
                                    Adress
                                </TextBlock>
                            </DataGridTextColumn.Header>
                        </DataGridTextColumn>
                        <DataGridTextColumn Width=" 0.15*" Binding="{Binding NumderOfAVAILABLESlots}">
                            <DataGridTextColumn.Header >
                                <TextBlock TextWrapping="Wrap">
                                    Number of available slots
                                </TextBlock>
                            </DataGridTextColumn.Header>
                        </DataGridTextColumn>
                        <DataGridTextColumn Width=" 0.15*" Binding="{Binding NumberOfBikes}">
                            <DataGridTextColumn.Header >
                                <TextBlock TextWrapping="Wrap">
                                    Number of available bicycles
                                </TextBlock>
                            </DataGridTextColumn.Header>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </TabItem>

        <TabItem Name="History" Width="108" HorizontalAlignment="Right">
            <TabItem.Header >
                <Image Height="30" Source="Images/bike.png"></Image>
            </TabItem.Header>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.15*"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock FontSize="22" Grid.Row="0" FontFamily=" Times New Roman" HorizontalAlignment="Center" Margin="0 10">History of your trips</TextBlock>
                <DataGrid Grid.Row="1">
                </DataGrid>
            </Grid>
        </TabItem>

        <TabItem Name="Help" Width="108" HorizontalAlignment="Right">
            <TabItem.Header>
                <Image Height="30" Source="Images/help.png"></Image>
            </TabItem.Header>
            <StackPanel Orientation="Vertical">
                <Button Name="Rules" Click="Rules_Click">
                    <Button.Template>
                        <ControlTemplate>
                            <Grid>
                                <Image Source="Images/right.png" HorizontalAlignment="Right" Margin="40" Height="30"></Image>
                                <TextBlock FontSize="22" Margin="50" HorizontalAlignment="Left" FontFamily="Times New Roman">Правила пользования проката</TextBlock>
                            </Grid>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button Name="Price" Click="Price_Click">
                    <Button.Template>
                        <ControlTemplate>
                            <Grid>
                                <Image Source="Images/right.png" HorizontalAlignment="Right" Margin="40" Height="30"></Image>
                                <TextBlock FontSize="22" Margin="50" HorizontalAlignment="Left" FontFamily="Times New Roman">Стоимость проката</TextBlock>
                            </Grid>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button Name="AboutOurCompany" Click="AboutOurCompany_Click">
                    <Button.Template>
                        <ControlTemplate>
                            <Grid>
                                <Image Source="Images/right.png" HorizontalAlignment="Right" Margin="40" Height=" 30"></Image>
                                <TextBlock FontSize="22" Margin="50" HorizontalAlignment="Left" FontFamily="Times New Roman">О CYCLE</TextBlock>
                            </Grid>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Image Source="Images/men.png" Height="100" Margin="250 30 20 20" ></Image>
            </StackPanel>
        </TabItem>
    </TabControl>
</Window>

